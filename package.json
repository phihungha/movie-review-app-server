    "@pothos/plugin-scope-auth": "^3.19.1",
    "@pothos/plugin-validation": "^3.9.1",
    "@prisma/client": "^4.14.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.0",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.21.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier -w",
      "eslint --fix --cache"
    ],
    "*.{json,md,yml,graphql}": [
      "prettier -w"
    ]
  }
